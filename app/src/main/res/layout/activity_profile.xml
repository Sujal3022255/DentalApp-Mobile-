<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Blue Header Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4A90E2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnCloseProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="12dp"
            android:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dental"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_marginEnd="48dp" />
    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/profile_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dental_blue"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

        <!-- Profile Picture -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img"
                android:scaleType="centerCrop"
                android:contentDescription="@string/profile_picture" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@id/profile_image"
                android:layout_alignBottom="@id/profile_image"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@drawable/login_button_bg"
                android:padding="5dp"
                android:contentDescription="@string/edit_picture" />
        </RelativeLayout>

        <!-- Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/profile_name_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/name_hint"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_label"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/profile_email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />

        <!-- Phone Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_label"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/profile_phone_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />

        <!-- Date of Birth Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dob_label"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/profile_dob_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/dob_hint"
            android:inputType="date"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />

        <!-- Address Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_label"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/profile_address_input"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="@string/address_hint"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="20dp"
            android:gravity="top"
            android:textSize="14sp" />

        <!-- Emergency Contact Button -->
        <Button
            android:id="@+id/emergency_contact_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/emergency_contact_button"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/login_input_bg"
            android:layout_marginBottom="15dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/save_profile_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/save_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bg"
            android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
