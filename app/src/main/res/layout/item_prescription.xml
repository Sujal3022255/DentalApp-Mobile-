<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/prescription_medication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amoxicillin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dental_blue" />

        <TextView
            android:id="@+id/prescription_dentist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prescribed by: Dr. Michael Chen"
            android:textSize="12sp"
            android:textColor="@color/dental_gray"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/prescription_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/10/2025"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/prescription_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosage: 500mg"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/prescription_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency: 3 times daily"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/prescription_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 7 days"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/prescription_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take with food. Complete full course."
            android:textSize="12sp"
            android:textColor="@color/dental_gray"
            android:textStyle="italic"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/download_prescription_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DOWNLOAD PRESCRIPTION"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bg"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
