<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reschedule Appointment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dental_blue"
            android:gravity="center"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Appointment"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/current_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Date: 15/12/2025"
            android:textSize="16sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/current_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Time: 10:00 AM"
            android:textSize="16sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Appointment"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select New Date"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/new_date_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Select new date"
            android:inputType="none"
            android:focusable="false"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:drawableEnd="@android:drawable/ic_menu_today"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select New Time"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/new_time_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/reschedule_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CONFIRM RESCHEDULE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bg"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
