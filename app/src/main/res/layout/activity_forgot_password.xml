<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp">

        <!-- Header with logo -->
        <ImageView
            android:id="@+id/forgot_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="centerInside" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dental_blue"
            android:layout_marginBottom="10dp"
            android:gravity="center" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_desc"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="40dp"
            android:gravity="center" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/forgot_email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="30dp"
            android:textSize="14sp" />

        <!-- Reset Button -->
        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/reset_password_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bg"
            android:layout_marginBottom="20dp"
            android:elevation="4dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/forgot_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="20dp" />

        <!-- Back to Login -->
        <TextView
            android:id="@+id/back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_login"
            android:textSize="14sp"
            android:textColor="@color/primary_dental_blue"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp" />

    </LinearLayout>
</ScrollView>
