<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dental X-Ray - Full Mouth"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dental_blue" />

        <TextView
            android:id="@+id/report_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-Ray Report"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bg"
            android:padding="4dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/report_dentist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By: Dr. Emily Brown"
            android:textSize="12sp"
            android:textColor="@color/dental_gray"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/09/2025"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/report_findings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Findings: Periapical infection detected"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/report_recommendations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendations: Root canal therapy recommended"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/download_report_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DOWNLOAD REPORT"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bg"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
