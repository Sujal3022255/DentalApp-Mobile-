<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule Management"
                    android:textSize="18sp"
                    android:textColor="#1E3A5F"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Calendar View -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textSize="16sp"
                        android:textColor="#1E3A5F"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:dateTextAppearance="@android:style/TextAppearance.Small" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Selected Date Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSelectedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected: 15 Dec 2025"
                        android:textSize="16sp"
                        android:textColor="#1E3A5F"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAvailable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Available on this date"
                        android:textSize="14sp"
                        android:checked="true"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnBlockDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Block This Date"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#D32F2F" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Time Slots Configuration -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Slots Configuration"
                        android:textSize="16sp"
                        android:textColor="#1E3A5F"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Start Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Start Time:"
                            android:textSize="14sp"
                            android:textColor="#6B7C8F"
                            android:layout_gravity="center_vertical" />

                        <Button
                            android:id="@+id/btnStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00 AM"
                            android:textColor="#4A90E2"
                            style="?attr/materialButtonOutlinedStyle" />

                    </LinearLayout>

                    <!-- End Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="End Time:"
                            android:textSize="14sp"
                            android:textColor="#6B7C8F"
                            android:layout_gravity="center_vertical" />

                        <Button
                            android:id="@+id/btnEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06:00 PM"
                            android:textColor="#4A90E2"
                            style="?attr/materialButtonOutlinedStyle" />

                    </LinearLayout>

                    <!-- Slot Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Slot Duration:"
                            android:textSize="14sp"
                            android:textColor="#6B7C8F"
                            android:layout_gravity="center_vertical" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:checkedChip="@id/chip30">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 min"
                                style="@style/Widget.MaterialComponents.Chip.Choice" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 min"
                                style="@style/Widget.MaterialComponents.Chip.Choice" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60 min"
                                style="@style/Widget.MaterialComponents.Chip.Choice" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSaveTimeSlots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Time Slots"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#4A90E2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Weekly Schedule -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Availability"
                        android:textSize="16sp"
                        android:textColor="#1E3A5F"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMonday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:checked="true"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchTuesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:checked="true"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchWednesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:checked="true"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchThursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:checked="true"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchFriday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Friday"
                        android:checked="true"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSaturday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:checked="false"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunday"
                        android:checked="false"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnSaveWeeklySchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Weekly Schedule"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#4A90E2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Available Time Slots for Selected Date -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Time Slots"
                        android:textSize="16sp"
                        android:textColor="#1E3A5F"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTimeSlots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Blocked Dates List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blocked Dates"
                        android:textSize="16sp"
                        android:textColor="#1E3A5F"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBlockedDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/tvNoBlockedDates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No blocked dates"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:visibility="gone"
                        android:layout_gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
