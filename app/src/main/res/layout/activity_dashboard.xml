<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:src="@drawable/dental_logo"
            android:scaleType="fitStart"
            android:contentDescription="Dental Clinic Logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_popup_reminder"
            android:contentDescription="Notifications"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/qr_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="QR Code" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Grid Menu Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:padding="16dp"
                    android:alignmentMode="alignMargins">

                    <!-- Appointments -->
                    <LinearLayout
                        android:id="@+id/menu_appointments"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:tint="@color/primary_dental_blue"
                            android:contentDescription="Appointments" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointments"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Browse Dentists -->
                    <LinearLayout
                        android:id="@+id/menu_browse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_search"
                            android:tint="#4CAF50"
                            android:contentDescription="Browse" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse\nDentists"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Profile -->
                    <LinearLayout
                        android:id="@+id/menu_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:tint="#FF9800"
                            android:contentDescription="Profile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Dental History -->
                    <LinearLayout
                        android:id="@+id/menu_history"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            android:tint="#9C27B0"
                            android:contentDescription="History" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dental\nHistory"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Emergency -->
                    <LinearLayout
                        android:id="@+id/menu_emergency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:tint="#F44336"
                            android:contentDescription="Emergency" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Reminders -->
                    <LinearLayout
                        android:id="@+id/menu_reminders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_popup_reminder"
                            android:tint="#FF5722"
                            android:contentDescription="Reminders" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminders"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Treatment Plans -->
                    <LinearLayout
                        android:id="@+id/menu_treatment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="#3F51B5"
                            android:contentDescription="Treatment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Treatment\nPlans"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Insurance -->
                    <LinearLayout
                        android:id="@+id/menu_insurance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:tint="#00BCD4"
                            android:contentDescription="Insurance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insurance"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Settings -->
                    <LinearLayout
                        android:id="@+id/menu_settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_preferences"
                            android:tint="#607D8B"
                            android:contentDescription="Settings" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>

                </GridLayout>

            </androidx.cardview.widget.CardView>

            <!-- Upcoming Appointments Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Upcoming Appointments"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_dental_blue" />

                        <TextView
                            android:id="@+id/view_all_appointments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_dental_blue"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/upcoming_appointments_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/no_appointments_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No upcoming appointments"
                        android:textSize="14sp"
                        android:textColor="@color/dental_gray"
                        android:gravity="center"
                        android:padding="20dp"
                        android:visibility="visible" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
