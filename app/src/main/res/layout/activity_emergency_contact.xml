<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_contact_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dental_blue"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_contact_desc"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:gravity="center"
            android:layout_marginBottom="30dp" />

        <!-- Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_name"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/emergency_name_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/contact_name_hint"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />

        <!-- Relationship Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relationship_label"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/emergency_relationship_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/relationship_hint"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />

        <!-- Phone Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_label"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/emergency_phone_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_label_optional"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/emergency_email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="25dp"
            android:textSize="14sp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/save_emergency_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/save_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bg"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
