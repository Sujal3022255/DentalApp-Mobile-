<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/treatment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Root Canal Treatment"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dental_blue" />

        <TextView
            android:id="@+id/treatment_dentist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr: Sarah Johnson"
            android:textSize="14sp"
            android:textColor="@color/dental_gray"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/treatment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/10/2025"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/treatment_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Root canal therapy on tooth #14"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/treatment_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$850.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dental_blue" />

            <TextView
                android:id="@+id/treatment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPLETED"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/accent_teal"
                android:background="@drawable/login_input_bg"
                android:padding="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/treatment_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes: Treatment completed successfully"
            android:textSize="12sp"
            android:textColor="@color/dental_gray"
            android:textStyle="italic"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
