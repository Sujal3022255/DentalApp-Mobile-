<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dental_blue"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/dentist_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/dentist_specialty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Dentistry"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/appointment_date_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Select appointment date"
            android:inputType="none"
            android:focusable="false"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="15dp"
            android:drawableEnd="@android:drawable/ic_menu_today"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/appointment_time_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Type"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/appointment_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_input_bg"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes (Optional)"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/appointment_notes_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Add any notes or special requirements"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/black"
            android:textColorHint="@color/dental_gray"
            android:layout_marginBottom="25dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/book_appointment_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="BOOK APPOINTMENT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bg"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
